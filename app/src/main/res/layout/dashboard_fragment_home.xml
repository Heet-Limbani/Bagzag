<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            style="@style/AppTheme.BaseGuidLine.Horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            style="@style/AppTheme.BaseGuidLine.Vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            style="@style/AppTheme.BaseGuidLine.Vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            style="@style/AppTheme.BaseImageView.Image30X30"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toTopOf="@id/guidelineTop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cart"
            style="@style/AppTheme.BaseImageView.Image24X24"
            android:src="@drawable/ic_cart"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintTop_toTopOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notification"
            style="@style/AppTheme.BaseImageView.Image24X24"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_notification"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toStartOf="@id/cart"
            app:layout_constraintTop_toTopOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/favorites"
            style="@style/AppTheme.BaseImageView.Image24X24"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_wish_list"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toStartOf="@id/notification"
            app:layout_constraintTop_toTopOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search"
            style="@style/AppTheme.BaseImageView.Image24X24"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_search_24"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toStartOf="@id/favorites"
            app:layout_constraintTop_toTopOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heading"
            style="@style/AppTheme.BaseTextView.18BlackLight"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/hi_david"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subHeading"
            style="@style/AppTheme.BaseTextView.16GreyRegular"
            android:text="@string/new_collection_from_bagzag"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/heading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/categoriesHeading"
            style="@style/AppTheme.BaseTextView.16BlackMedium"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/categories"
            app:layout_constraintEnd_toStartOf="@id/categoriesViewMore"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/subHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/categoriesViewMore"
            style="@style/AppTheme.BaseTextView.14GreyRegular"
            android:text="@string/view_more"
            app:layout_constraintBottom_toBottomOf="@id/categoriesHeading"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/categoriesHeading"
            app:layout_constraintTop_toTopOf="@id/categoriesHeading" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/categoriesHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bestsellerHeading"
            style="@style/AppTheme.BaseTextView.16BlackMedium"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/bestseller_product"
            app:layout_constraintEnd_toStartOf="@id/bestsellerViewMore"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewCategories" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bestsellerViewMore"
            style="@style/AppTheme.BaseTextView.14GreyRegular"
            android:text="@string/view_more"
            app:layout_constraintBottom_toBottomOf="@id/bestsellerHeading"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/bestsellerHeading"
            app:layout_constraintTop_toTopOf="@id/bestsellerHeading" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProductBestseller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/bestsellerHeading" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recentlyViewedContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewProductBestseller">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline80"
                style="@style/AppTheme.BaseGuidLine.Horizontal"
                app:layout_constraintGuide_percent="0.8" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStartSub"
                style="@style/AppTheme.BaseGuidLine.Vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEndSub"
                style="@style/AppTheme.BaseGuidLine.Vertical"
                app:layout_constraintGuide_percent="0.95" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/guideline80"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recentlyViewedHeading"
                style="@style/AppTheme.BaseTextView.16WhiteMedium"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/recently_viewed_by_you"
                app:layout_constraintEnd_toStartOf="@id/recentlyViewedViewMore"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@id/guidelineStartSub"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recentlyViewedViewMore"
                style="@style/AppTheme.BaseTextView.14GreyRegular"
                android:text="@string/view_more"
                app:layout_constraintBottom_toBottomOf="@id/recentlyViewedHeading"
                app:layout_constraintEnd_toEndOf="@id/guidelineEndSub"
                app:layout_constraintStart_toEndOf="@id/recentlyViewedHeading"
                app:layout_constraintTop_toTopOf="@id/recentlyViewedHeading" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guidelineEndSub"
                app:layout_constraintStart_toStartOf="@id/guidelineStartSub"
                app:layout_constraintTop_toBottomOf="@id/recentlyViewedHeading">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRecentlyViewed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buyerMostLovedHeading"
            style="@style/AppTheme.BaseTextView.16BlackMedium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/buyer_s_most_loved"
            app:layout_constraintEnd_toStartOf="@id/buyerMostLovedViewMore"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/recentlyViewedContainer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buyerMostLovedViewMore"
            style="@style/AppTheme.BaseTextView.14GreyRegular"
            android:text="@string/view_more"
            app:layout_constraintBottom_toBottomOf="@id/buyerMostLovedHeading"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/buyerMostLovedHeading"
            app:layout_constraintTop_toTopOf="@id/buyerMostLovedHeading" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBuyerMostLoved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/buyerMostLovedHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/findThingsHeading"
            style="@style/AppTheme.BaseTextView.16BlackMedium"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/find_things_you_ll_love"
            app:layout_constraintEnd_toStartOf="@id/findThingsViewMore"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewBuyerMostLoved" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/findThingsViewMore"
            style="@style/AppTheme.BaseTextView.14GreyRegular"
            android:text="@string/view_more"
            app:layout_constraintBottom_toBottomOf="@id/findThingsHeading"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/findThingsHeading"
            app:layout_constraintTop_toTopOf="@id/findThingsHeading" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFindThings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/findThingsHeading" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



