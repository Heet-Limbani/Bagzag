    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ratingHeading"
        style="@style/AppTheme.BaseTextView.18BlackMedium"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/rating"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/recentProductChipGroupView" />

    <HorizontalScrollView
        android:id="@+id/ratingChipGroupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/ratingHeading">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ratingChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:singleLine="true"
            app:singleSelection="true" />

    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceHeading"
        style="@style/AppTheme.BaseTextView.18BlackMedium"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/price"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/ratingChipGroupView" />

    <HorizontalScrollView
        android:id="@+id/priceChipGroupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/priceHeading">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/priceChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:singleLine="true"
            app:singleSelection="true" />

    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/offerHeading"
        style="@style/AppTheme.BaseTextView.18BlackMedium"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/offers"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/priceChipGroupView" />

    <HorizontalScrollView
        android:id="@+id/offerChipGroupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/offerHeading">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/offerChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal"
            app:singleLine="true"
            app:singleSelection="true" />

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>