<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/storeImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/storeName"
        android:background="@drawable/drawable_round_background_empty"
        android:src="@drawable/ic_store_one"
        android:clipToOutline="true"
        android:scaleType="fitXY"
    />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/storeName"
        style="@style/AppTheme.BaseTextView.16BlackRegular"
        app:layout_constraintTop_toBottomOf="@id/storeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/storeLike"
        app:layout_constraintBottom_toTopOf="@id/storeAddress"
        app:layout_constraintHorizontal_bias="0"
        android:text="@string/the_new_store"
    />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/storeAddress"
        style="@style/AppTheme.BaseTextView.12GreyRegular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/storeLike"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/storeName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/_3038_godfrey_street_tigard_or_97223"
    />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/storeLike"
        style="@style/AppTheme.BaseImageView.Image30X30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storeImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_liked_grey"
        android:scaleType="fitXY"
    />

</androidx.constraintlayout.widget.ConstraintLayout>