        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>

    <style name="AppTheme.BaseEditText.OTPInput">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/drawable_otp_input_unselected</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:lines">2</item>
