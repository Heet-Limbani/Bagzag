<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.BaseScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="AppTheme.BaseGuidLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.BaseGuidLine.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.BaseGuidLine.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
    </style>

    <style name="AppTheme.BaseButton.SignUpButton">
        <item name="android:background">@drawable/drawable_button_black_border</item>
        <item name="android:text">@string/sign_up</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="AppTheme.BaseButton.BlackButton">
        <item name="android:background">@drawable/drawable_button_black_round</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="AppTheme.BaseTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="AppTheme.BaseTextView.18GreyMedium">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="AppTheme.BaseTextView.24BlackLight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="AppTheme.BaseTextView.20BlackMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="AppTheme.BaseTextView.25BlackMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="AppTheme.BaseTextView.12GreyRegular">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>


    <style name="AppTheme.BaseTextView.14GreyRegular">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="AppTheme.BaseTextView.16BlackMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="AppTheme.BaseTextView.18PinkBold">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="AppTheme.BaseTextView.34BlackLight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_34ssp</item>
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="AppTheme.BaseImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.BaseImageView.RoundImage">
        <item name="android:background">@drawable/drawable_round</item>
        <item name="android:clipToOutline" tools:targetApi="s">true</item>
    </style>

    <style name="AppTheme.BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
    </style>

    <style name="AppTheme.BaseEditText.Grey">
        <item name="android:background">@drawable/drawable_input_background_grey_border</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>

</resources>
